<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jsg.house.like.model.mapper.LikeMapper">

	<sql id="search">
		<if test="word != null and word != ''">
			where ${key} like concat('%', #{word}, '%')
		</if>
	</sql>
	
	<!-- List<Object> listLike(HashMap<String, Object> map) throws SQLException; -->
	<select id="listLike" parameterType="map" resultType="likeBoard">
		select id, boardId, userId, subject, title
		from like_view
		<include refid="search"></include>
		order by id desc
		limit #{start}, #{listsize}
	</select>

	<!-- int registLike(Like like) throws SQLException; -->
	<insert id="registLike" parameterType="like">
		insert into `like` (board_id, user_id)
		values (#{boardId}, #{userId})
	</insert>

	<!-- int deleteLike(String likeId) throws SQLException; -->
	<update id="deleteLike" parameterType="string">
		update `like`
		set state = -1
		where id = #{likeId}
	</update>
	
</mapper>